<label><%- Messages.getText(label) %></label>
<input class="form-control"
       placeholder="<%- Messages.getText(placeholder) %>"
       value="<%- value %>">
<% if (helpMessage) { %>
  <span style="display:<%= hasProblem ? 'block' : 'none' %>"
        class="help-block">
        <%- Messages.getText(helpMessage) %>
  </span>
<% } %>
